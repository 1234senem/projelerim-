#include <stdio.h>
#include <stdlib.h>

//244003 DÃ–NE BASAN
#define N 8
int main()
{
	int dizi[N][N], i, j, x, y, toplam = 0;

	printf("\tKonum Giriniz\n\n");
	printf("x:"); scanf("%d", &x); x = x - 1;
	printf("y:"); scanf("%d", &y); y = y - 1;
	printf("\n\n");

	if (x<0 || x>N - 1 || y<0 || y>N - 1)
	{
		printf("\nYanlis giris yaptiniz.");
		return 0;
	}

	for (i = 0; i<=N; i++)
	{
		for (j = 0; j<=N; j++)
		{

			if (i == x && j == y)
				printf("K  ");

			else if ((x - 2) == i && (y - 1) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x - 2) == i && (y + 1) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x - 1) == i && (y + 2) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x - 1) == i && (y - 2) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x + 1) == i && (y - 2) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x + 1) == i && (y + 2) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x + 2) == i && (y + 1) == j)
			{
				printf("x  ");
				toplam++;
			}
			else if ((x + 2) == i && (y - 1) == j)
			{
				printf("x  ");
				toplam++;
			}
			else
				printf("0  ");
		}
		printf("\n");
	}
	printf("\n");
	printf("Atin toplam hareket sayisi: %d\n", toplam);

	system("pause");
	return 0;
}
